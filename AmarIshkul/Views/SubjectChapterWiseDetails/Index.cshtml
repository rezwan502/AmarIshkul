
@{
    ViewBag.Title = "Subject Chapterwise List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;color:black">Subject Chapter List</h2>
<p>
    @Html.ActionLink("Create New Chapter", "Create", null, new { @Class = "btn btn-info btn-md" })
</p>
&nbsp;

<table class="table table-striped table-condensed" style="width:100%">
    <tr>
        <th style="padding-left:5px">
            Class
        </th>
        <th>
           Subject Name
        </th>
        <th>
           Title
        </th>
        <th>
            UrlLink
        </th>
        <th>
           Content
        </th>
        <th>
           PublishDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.subjectChapterWiseDetails)
    {
        <tr>
            <td>
                @foreach (var clas in ViewBag.Classes)
                {
                    if (item.SubjectchapterSetup.ClassId == clas.Id)
                    {
                        @clas.Name
                    }
                }           
            </td>
            
            <td>
                @item.SubjectchapterSetup.Name
            </td>
            <td>
                @item.Title
            </td>
            <td>
              @item.UrlLink
            </td>
            <td style="color: #f39c12;">
               Click Edit
            </td>
            <td>
               @item.PublishDate.ToString("dd-MMM-yyyy")
            </td>
            <td style="text-align:center">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @Class = "btn btn-warning btn-sm" })
                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#@item.Id" data-whatever="">Delete</button>
                <div class="modal fade" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12" style="color:red">Are you sure you want to delete?</div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">No</button>
                                @Html.ActionLink("Yes", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger btn-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
